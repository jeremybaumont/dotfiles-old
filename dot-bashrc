#fi

#if [ -f ~/.bash_secrets ]; then
#	. ~/.bash_secrets 
#fi

# set PATH so it includes user's private bin if it exists
if [ -d ~/bin ] ; then
    PATH=~/bin:"${PATH}"
fi
